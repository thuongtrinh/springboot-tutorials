<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>utf-8</charset>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - traceId=%X{traceId} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <logger name="org.apache" level="INFO"/>
    <logger name="com.google" level="INFO"/>
    <logger name="com.txt.rest.simple" level="INFO"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <springProfile name="uat">
        <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
            <http class="com.github.loki4j.logback.ApacheHttpSender">
                <url>http://host-loki-cluster-service:3100/loki/api/v1/push</url>
            </http>
            <format class="com.github.loki4j.logback.ProtobufEncoder">
                <label>
                    <pattern>app=spring-boot-rest-example,host=${HOSTNAME},level=%level</pattern>
                </label>
                <message>
                    <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} l=%level h=${HOSTNAME} c=%logger{20} t=%thread |
                        correlationId=%X{correlationId} | traceId=%X{traceId} %msg %ex
                    </pattern>
                </message>
                <sortByTime>true</sortByTime>
            </format>
        </appender>
        <logger name="org.apache" level="INFO"/>
        <logger name="com.google" level="INFO"/>
        <logger name="com.txt.rest.simple" level="INFO"/>
        <root level="INFO">
            <appender-ref ref="LOKI"/>
        </root>
    </springProfile>
</configuration>
